---
import { FOOTER_LINKS } from "../data/constants";

const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "Twitter", href: "https://x.com/unicalibre", icon: "twitter" },
  { name: "LinkedIn", href: "https://linkedin.com/company/unicalibre", icon: "linkedin" },
];
---

<footer class="bg-slate-50 border-t border-slate-200 pt-16 pb-8" role="contentinfo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-10">

      <!-- Col 1: Logo & Tagline -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-block mb-4">
          <span class="font-heading font-bold text-xl tracking-tight text-slate-900">
            Uni<span class="text-primary">Calibre</span>
          </span>
        </a>
        <p class="text-sm text-slate-500 leading-relaxed mb-6">
          Professional quantity takeoff services for flooring, countertops, and cabinets. Numbers you can trust.
        </p>
        <!-- Social Links -->
        <div class="flex items-center gap-3 mb-4" role="list" aria-label="Social media links">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              class="text-slate-400 hover:text-primary transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              title={`Follow us on ${link.name}`}
              role="listitem"
            >
              <span class="sr-only">{link.name}</span>
              {link.icon === "twitter" && (
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              )}
              {link.icon === "linkedin" && (
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              )}
            </a>
          ))}
        </div>
        <div class="text-sm text-slate-400">
          &copy; {currentYear} Unicalibre.
        </div>
      </div>

      <!-- Col 2: Services -->
      <nav aria-label="Services links">
        <h4 class="text-sm font-semibold text-slate-900 mb-4">Services</h4>
        <ul class="space-y-2">
          {FOOTER_LINKS.services.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-slate-600 hover:text-primary transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Col 3: Company -->
      <nav aria-label="Company links">
        <h4 class="text-sm font-semibold text-slate-900 mb-4">Company</h4>
        <ul class="space-y-2">
          {FOOTER_LINKS.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-slate-600 hover:text-primary transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Col 4: Resources -->
      <nav aria-label="Resources links">
        <h4 class="text-sm font-semibold text-slate-900 mb-4">Resources</h4>
        <ul class="space-y-2">
          {FOOTER_LINKS.resources.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-slate-600 hover:text-primary transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Col 5: Glossary -->
      <nav aria-label="Glossary links">
        <h4 class="text-sm font-semibold text-slate-900 mb-4">Glossary</h4>
        <ul class="space-y-2 border-l-2 border-slate-200 pl-4">
          {FOOTER_LINKS.glossary.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-slate-500 hover:text-primary transition-colors block py-0.5">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

    </div>
  </div>
</footer>
