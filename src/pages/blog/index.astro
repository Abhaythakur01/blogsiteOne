---
import Layout from "../../layouts/Layout.astro";
import BlogCard from "../../components/blog/BlogCard.astro";
import { getPosts, getCategories } from "../../lib/sanity";

const posts = await getPosts();
const categories = await getCategories();
---

<Layout
  title="Blog"
  description="Browse all our blog posts - insights, tutorials, and company updates."
>
  <!-- Hero -->
  <section class="py-24 bg-slate-50 border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl">
        <p class="text-primary font-semibold uppercase tracking-wider text-sm mb-3">Our Blog</p>
        <h1 class="mb-4 text-slate-900">Blog</h1>
        <p class="text-xl text-slate-600">
          Explore our latest articles, tutorials, and insights from our team.
        </p>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Categories Filter -->
    {categories.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-12">
        <a
          href="/blog"
          class="px-4 py-2 rounded-full bg-primary text-primary-foreground font-medium shadow-sm transition-colors"
        >
          All
        </a>
        {categories.map((category) => (
          <a
            href={`/categories/${category.slug.current}`}
            class="px-4 py-2 rounded-full bg-white border border-slate-200 text-slate-600 font-medium hover:border-primary/40 hover:text-primary transition-colors"
          >
            {category.title}
          </a>
        ))}
      </div>
    )}

    <!-- Posts Grid -->
    {posts.length > 0 ? (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-slate-500 text-lg">No posts yet. Check back soon!</p>
      </div>
    )}
  </section>
</Layout>
