export function getStaticPaths() {
  // Catch-all route: renders /studio, /studio/desk, /studio/vision, etc.
  // Sanity Studio handles its own client-side routing
  return [
    { params: { index: undefined } },
    { params: { index: "desk" } },
    { params: { index: "vision" } },
    { params: { index: "structure" } },
  ];
}
